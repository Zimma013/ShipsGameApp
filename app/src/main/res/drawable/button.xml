        android:angle="45"
        android:centerX="35%"
        android:centerColor="#D2000A69"
        android:startColor="#D20011B2"
        android:endColor="#D20017F2"
        android:type="linear"
        />

    <stroke
        android:width="2dp"
        android:color="#FFE177"
        />
